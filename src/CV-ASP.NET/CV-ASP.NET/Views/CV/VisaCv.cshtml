@using CV_ASP.NET.Models.ViewModels
@model VisaCvViewModel


@{
    ViewData["Title"] = "Visa CV";
}

<h2>@ViewData["Title"]</h2>

<div class="cv-container">
    <div class="cv-header">
        <h3>@Model.anvandare.Anvandarnamn</h3>
       
    </div>

    <div class="cv-profile-image">
        @if (!string.IsNullOrEmpty(Model.Cv.Profilbild))
        {
            <img src="@Url.Content("~/images/" + Model.Cv.Profilbild)" alt="Profilbild" class="profile-image" />
        }
        else
        {
            <p>Ingen profilbild uppladdad.</p>
        }
    </div>

    <h1>Rensa alla CV:n</h1>

    <form method="post" asp-action="TaBortAllaCvn">
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Rensa alla CV:n</button>
        </div>
    </form>

