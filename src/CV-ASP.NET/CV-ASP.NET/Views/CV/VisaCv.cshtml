        <h4>Projekt</h4>
        <ul>
            @foreach (var projekt in Model.projekt)
            {
                <li>@projekt.Namn</li>
            }
        </ul>
    </div> *@

    <div class="cv-competences">
        <h4>Kompetenser</h4>
        <ul>
            @foreach (var competence in Model.kompetenser)
            {
                <li>@competence.KompetensNamn</li>
            }
        </ul>
    </div>

    <div class="cv-experiences">
        <h4>Erfarenheter</h4>
        <ul>
            @foreach (var experience in Model.erfarenhet)
            {
                <li>@experience.Titel - @experience.Arbetsgivare</li>
            }
        </ul>
    </div>

    <div class="cv-educations">
        <h4>Utbildningar</h4>
        <ul>
            @foreach (var education in Model.utbildning)
            {
                <li>@education.Beskrivning - @education.Instutition</li>
            }
        </ul>
    </div>
</div>
