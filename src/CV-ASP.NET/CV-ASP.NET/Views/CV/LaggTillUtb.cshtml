@using CV_ASP.NET.Models.ViewModels
@model UtbildningViewModel

@{
    ViewData["Title"] = "Lägg till utbildning";
}

<div asp-validation-summary="All" class="text-danger"></div>

<form method="post" asp-action="LaggTillUtb" enctype="multipart/form-data">
    <h3>Utbildning</h3>
    <div class="form-group row mb-4">
        <label class="col-sm-2">Instutition:</label>
        <div class="col-sm-4">
            <input asp-for="Instutition" class="form-control" />
            <span asp-validation-for="Instutition" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mb-4">
        <label class="col-sm-2">Kurs/Program:</label>
        <div class="col-sm-4">
            <input asp-for="Kurs_program" class="form-control" />
            <span asp-validation-for="Kurs_program" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row mb-4">
        <label class="col-sm-2">Beskrivning:</label>
        <div class="col-sm-4">
            <textarea asp-for="Beskrivning" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Beskrivning" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mb-4">
        <label class="col-sm-2">Startdatum:</label>
        <div class="col-sm-4">
            <input asp-for="StartDatum" type="date" class="form-control" />
            <span asp-validation-for="StartDatum" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mb-4">
        <label class="col-sm-2">Slutdatum:</label>
        <div class="col-sm-4">
            <input asp-for="SlutDatum" type="date" class="form-control" />
            <span asp-validation-for="SlutDatum" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-sm-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Lägg till utbildning</button>
        </div>
    </div>
</form>