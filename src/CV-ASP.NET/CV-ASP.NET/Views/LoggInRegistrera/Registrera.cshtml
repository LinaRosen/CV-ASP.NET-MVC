@model CV_ASP.NET.Models.ViewModels.RegistreraViewModel

<div class="container">
    <h1>Registrera ny användare</h1>
    <form asp-action="Registrera" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div>
            <label asp-for="Anvandarnamn"></label>
            <input asp-for="Anvandarnamn" class="form-control" />
            <span asp-validation-for="Anvandarnamn" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Fornamn"></label>
            <input asp-for="Fornamn" class="form-control" />
            <span asp-validation-for="Fornamn" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Efternamn"></label>
            <input asp-for="Efternamn" class="form-control" />
            <span asp-validation-for="Efternamn" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div> 


        <div>
            <label asp-for="Telefonnummer"></label>
            <input asp-for="Telefonnummer" class="form-control" />
            <span asp-validation-for="Telefonnummer" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Losenord"></label>
            <input asp-for="Losenord" class="form-control" type="password" />
            <span asp-validation-for="Losenord" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="BekraftaLosenord"></label>
            <input asp-for="BekraftaLosenord" class="form-control" type="password" />
            <span asp-validation-for="BekraftaLosenord" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="PrivatProfil">Vill du ha en privat profil?</label>
            <input asp-for="PrivatProfil" type="checkbox" class="form-check-input" />
        </div>

        <h3>Adressuppgifter</h3>
        <div>
            <label asp-for="Gatunamn"></label>
            <input asp-for="Gatunamn" class="form-control" />
            <span asp-validation-for="Gatunamn" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Stad"></label>
            <input asp-for="Stad" class="form-control" />
            <span asp-validation-for="Stad" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Postnummer"></label>
            <input asp-for="Postnummer" class="form-control" />
            <span asp-validation-for="Postnummer" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Registrera</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


