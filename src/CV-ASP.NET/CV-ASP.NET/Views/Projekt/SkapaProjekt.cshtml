@model CV_ASP.NET.Models.Projekt
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Titel = "SkapaProjekt";
}
<h2>@ViewBag.Titel</h2>


@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form asp-action="Skapa" method="post">
    <div class="form-group">
        <label asp-for="Namn"></label>
        <input asp-for="Namn" class="form-control" />
        <span asp-validation-for="Namn" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Beskrivning"></label>
        <textarea asp-for="Beskrivning" class="form-control"></textarea>
        <span asp-validation-for="Beskrivning" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Skapa Projekt</button>
</form>