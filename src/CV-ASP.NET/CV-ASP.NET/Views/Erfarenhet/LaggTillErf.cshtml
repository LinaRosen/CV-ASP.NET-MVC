@using CV_ASP.NET.Models
@model Erfarenhet

@{
    ViewData["Title"] = "Lägg till erfarenheter";
}

<h1>Lägg till ny erfarenhet</h1>

<div asp-validation-summary="All" class="text-danger"></div>
<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="Titel"></label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Titel" class="form-control" />
        </div>
    </div>
    <br />
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Beskriving: </label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Beskrivning" class="form-control" />
        </div>
    </div>
    <br />
    <div class="form-group row">
        <div class="col-sm-2">
            <label>Arbetsgivare: </label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Arbetsgivare" class="form-control" />
        </div>
    </div>
    <br />
    <br />
    <div class="form-group row">
        <div class="offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Skapa ny erfarenhet</button>
        </div>
    </div>


</form>