@{
    var anvandareList = new[] {
        new { Fornamn = "John", Efternamn = "Doe", Anvandarnamn = "johndoe", Profilbild = "profile1.jpg", Id = 1 },
        new { Fornamn = "Jane", Efternamn = "Smith", Anvandarnamn = "janesmith", Profilbild = "profile2.jpg", Id = 2 },
        new { Fornamn = "Alice", Efternamn = "Johnson", Anvandarnamn = "alicejohnson", Profilbild = (string)null, Id = 3 },
        new { Fornamn = "Bob", Efternamn = "Brown", Anvandarnamn = "bobbrown", Profilbild = "profile4.jpg", Id = 4 }
    };
}

<div class="container-fluid d-flex justify-content-center align-items-center">
    <div class="row d-flex justify-content-center">
        @foreach (var Anvandare in anvandareList)
        {
            <div class="col-md-3 mb-4">
                <div class="card" style="width: 100%; background-color: #d3d3d3;">
                    @* Om profilbilden inte är null vill vi visa den i vyn *@
                    @if (Anvandare.Profilbild != null)
                    {
                        <img src="~/Images/@Anvandare.Profilbild" class="card-img-top" alt="Profilbild" asp-append-version="true" />
                    }
                    <div class="card-body flex-fill">
                        <h5 class="card-title">@Anvandare.Fornamn @Anvandare.Efternamn</h5>
                        <p>Anvandarnamn: @Anvandare.Anvandarnamn</p>
                        <form method="post" asp-controller="Cv" asp-action="ShowCv" asp-route-userId="@Anvandare.Id">
                            <input type="submit" class="btn btn-dark btn-sm" value="Till profil" />
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>



