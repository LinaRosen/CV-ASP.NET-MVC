@model CV_ASP.NET.Models.AndraKontaktViewModel

<h2 class="mb-4">Redigera Uppgifter</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div asp-validation-summary="All" class="alert alert-danger"></div>
}
<form method="post" asp-action="RedigeraUppgifter" enctype="multipart/form-data">
    <div class="row">
        <h4 class="mb-3">Kontaktinformation</h4>
        <div class="col-md-6 mb-3">
            <label asp-for="Anvandarnamn" class="form-label">Användarnamn</label>
            <input asp-for="Anvandarnamn" class="form-control" />
            <span asp-validation-for="Anvandarnamn" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Fornamn" class="form-label">Förnamn</label>
            <input asp-for="Fornamn" class="form-control" />
            <span asp-validation-for="Fornamn" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Efternamn" class="form-label">Efternamn</label>
            <input asp-for="Efternamn" class="form-control" />
            <span asp-validation-for="Efternamn" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Email" class="form-label">E-post</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Telefonnummer" class="form-label">Telefonnummer</label>
            <input asp-for="Telefonnummer" class="form-control" />
            <span asp-validation-for="Telefonnummer" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="PrivatProfil" class="form-label">Privat Profil</label>
            <div class="form-check">
                <input asp-for="PrivatProfil" type="checkbox" class="form-check-input" id="PrivatProfil" />
                <label class="form-check-label" for="PrivatProfil">Privat</label>
            </div>
            <span asp-validation-for="PrivatProfil" class="text-danger"></span>
        </div>
    </div>

    <div class="row mt-4">
        <h4 class="mb-3">Adress</h4>
        <div class="col-md-6 mb-3">
            <label asp-for="Gatunamn" class="form-label">Gatunamn</label>
            <input asp-for="Gatunamn" class="form-control" />
            <span asp-validation-for="Gatunamn" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Stad" class="form-label">Stad</label>
            <input asp-for="Stad" class="form-control" />
            <span asp-validation-for="Stad" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Postnummer" class="form-label">Postnummer</label>
            <input asp-for="Postnummer" class="form-control" />
            <span asp-validation-for="Postnummer" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group" style="display: flex; justify-content: flex-end;">
        <button type="submit" class="btn btn-primary"
            style="background-color: black; color: white; margin-right: 10px; padding: 8px 16px; font-size: 14px;">Spara Ändringar
        </button>

        <a href="@Url.Action("AndraLosenord", "AndraKontakt")" class="btn btn-dark" style="background-color: black; color: white; margin-right: 10px; padding: 8px 16px; font-size: 14px;">Ändra Lösenord</a>

        <a href="@Url.Action("Anvsida", "AnvSida")" class="btn btn-secondary" style="background-color: black; color: white; padding: 8px 16px; font-size: 14px;">Avbryt</a>
    </div>

</form>
